{
  "name": "@piiano/mcp-total-ext",
  "version": "1.3.2",
  "description": "Inject MCP tool definitions and handle tool calls when using ChatGPT in the browser",
  "private": true,
  "scripts": {
    "start": "node scripts/dev.js",
    "dev": "node scripts/build.js --dev --skip-mcp && node scripts/dev.js",
    "build": "node scripts/build.js",
    "build:dev": "node scripts/build.js --dev",
    "build:mcp": "node scripts/build.js --skip-clean --skip-extension",
    "quick": "node scripts/build.js --skip-mcp",
    "clean": "rimraf dist",
    "package": "npm run build && node scripts/package.js",
    "package:only": "node scripts/package.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix",
    "format": "prettier --write \"src/**/*.{js,json,css}\""
  },
  "keywords": [
    "chrome-extension",
    "chatgpt",
    "openai",
    "mcp",
    "tools"
  ],
  "author": "Ariel Shiftan",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.13.2"
  },
  "devDependencies": {
    "@babel/core": "^7.27.7",
    "@babel/preset-env": "^7.27.2",
    "archiver": "^6.0.2",
    "assert": "^2.1.0",
    "babel-loader": "^9.2.1",
    "buffer": "^6.0.3",
    "chokidar": "^3.6.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.11.0",
    "dotenv-webpack": "^8.1.0",
    "esbuild": "^0.19.12",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.9.0",
    "html-webpack-plugin": "^5.6.3",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.1",
    "process": "^0.11.10",
    "rimraf": "^5.0.10",
    "stream-browserify": "^3.0.0",
    "style-loader": "^3.3.4",
    "terser-webpack-plugin": "^5.3.14",
    "util": "^0.12.5",
    "webpack": "^5.99.9",
    "webpack-cli": "^5.1.4",
    "webpack-merge": "^5.10.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
