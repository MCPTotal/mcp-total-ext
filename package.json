{
  "name": "mcp-tools-for-chatgpt",
  "version": "0.1.0",
  "description": "Inject MCP tool definitions and handle tool calls when using ChatGPT in the browser",
  "main": "content.js",
  "scripts": {
    "build": "NODE_ENV=production webpack --config webpack.config.js && esbuild content.js --bundle --minify --outdir=dist",
    "build:dev": "webpack --config webpack.config.js --mode=development && esbuild content.js --bundle --outdir=dist",
    "watch": "webpack --config webpack.config.js --mode=development --watch",
    "dev": "node scripts/dev.js",
    "package": "npm run build && node scripts/package.js",
    "test": "jest",
    "lint": "eslint ."
  },
  "keywords": [
    "chrome-extension",
    "chatgpt",
    "openai",
    "mcp",
    "tools"
  ],
  "author": "Ariel Shiftan",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "archiver": "^6.0.1",
    "babel-loader": "^9.1.3",
    "chokidar": "^3.5.3",
    "esbuild": "^0.19.5",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
} 