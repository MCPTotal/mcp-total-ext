{
  "name": "mcp-tools-for-chatgpt",
  "version": "0.1.0",
  "description": "Inject MCP tool definitions and handle tool calls when using ChatGPT in the browser",
  "main": "content.js",
  "scripts": {
    "build": "NODE_ENV=production webpack --config webpack.config.js && esbuild content.js --bundle --minify --outdir=dist",
    "build:dev": "webpack --config webpack.config.js --mode=development && esbuild content.js --bundle --outdir=dist",
    "watch": "webpack --config webpack.config.js --mode=development --watch",
    "dev": "node scripts/dev.js",
    "package": "npm run build && node scripts/package.js",
    "test": "jest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{js,ts}\"",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "chrome-extension",
    "chatgpt",
    "openai",
    "mcp",
    "tools"
  ],
  "author": "Ariel Shiftan",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@babel/preset-typescript": "^7.23.3",
    "@types/chrome": "^0.0.246",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.3",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "archiver": "^6.0.1",
    "babel-loader": "^9.1.3",
    "chokidar": "^3.5.3",
    "esbuild": "^0.19.5",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.9.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
} 