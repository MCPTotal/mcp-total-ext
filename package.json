{
  "name": "mcp-tools-for-chatgpt",
  "version": "0.1.0",
  "description": "Inject MCP tool definitions and handle tool calls when using ChatGPT in the browser",
  "private": true,
  "scripts": {
    "start": "node scripts/dev.js",
    "dev": "node scripts/build.js --dev --skip-mcp && node scripts/dev.js",
    "build": "node scripts/build.js",
    "build:dev": "node scripts/build.js --dev",
    "build:mcp": "node scripts/build.js --skip-clean --skip-extension",
    "quick": "node scripts/build.js --skip-mcp",
    "clean": "rimraf dist",
    "package": "npm run build && node scripts/package.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix",
    "format": "prettier --write \"src/**/*.{js,json,css}\""
  },
  "keywords": [
    "chrome-extension",
    "chatgpt",
    "openai",
    "mcp",
    "tools"
  ],
  "author": "Ariel Shiftan",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.10.2"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "archiver": "^6.0.1",
    "babel-loader": "^9.1.3",
    "chokidar": "^3.5.3",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "dotenv-webpack": "^8.0.1",
    "esbuild": "^0.19.5",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.9.0",
    "html-webpack-plugin": "^5.5.3",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "style-loader": "^3.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-merge": "^5.9.0",
    "assert": "^2.1.0",
    "buffer": "^6.0.3",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "util": "^0.12.5"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
} 