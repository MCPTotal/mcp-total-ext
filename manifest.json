{
  "name": "MCPTotal",
  "description": "MCPTotal: Supercharge Your AI Chats With Tools. Instantly.",
  "version": "1.1.0",
  "manifest_version": 3,
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://mcptotal.io/*"
      ],
      "js": [
        "src/content/content.js",
        "src/content/mcp-bridge.js"
      ],
      "run_at": "document_start"
    }
  ],
  "host_permissions": [
    "https://mcp.mcptotal.io/*"
  ],
  "optional_host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/page/*"],
      "matches": [
        "https://chatgpt.com/*",
        "https://claude.ai/*"
      ]
    },
    {
      "resources": ["src/mcptotal/*"],
      "matches": [
        "https://mcptotal.io/*"
      ]
    }
  ]
}