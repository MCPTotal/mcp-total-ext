{
  "name": "MCP for ChatGPT",
  "description": "Connect ChatGPT to your own AI tools using Model Context Protocol (MCP) â€“ extend ChatGPT with custom capabilities",
  "version": "1.0.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*"
      ],
      "js": [
        "src/content/content.js",
        "src/content/mcp-bridge.js"
      ],
      "run_at": "document_start"
    }
  ],
  "optional_host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/page/*"],
      "matches": ["https://chatgpt.com/*"]
    }
  ]
}